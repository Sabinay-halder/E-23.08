            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDE9DE"
                android:padding="10dp">

                <EditText
                    android:id="@+id/user_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="I am doing job"
                    android:textColor="@color/app_backgroug" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <com.widevision.quemvaita.model.CustomTextView
                    android:id="@+id/user_intrests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Interests"
                    android:textColor="@color/app_backgroug" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDE9DE"
                android:padding="10dp">

                <EditText
                    android:id="@+id/user_intrest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Interested in music"
                    android:textColor="@color/app_backgroug" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>