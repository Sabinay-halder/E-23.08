<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.widevision.quemvaita.model.CustomTextView
        android:id="@+id/load_more_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#82490054"
        android:gravity="center"
        android:padding="10dp"
        android:text="Load More"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/receiver_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/round_img"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.85"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_friend_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/receiver_background"
                android:orientation="vertical"
                android:paddingLeft="20dp"

                android:visibility="visible">

                <com.widevision.quemvaita.model.CustomTextView
                    android:id="@+id/time_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="t"
                    android:textColor="#808080"
                    android:textSize="10sp" />

                <com.widevision.quemvaita.model.CustomTextView
                    android:id="@+id/friend_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="tesets sfds fsf sdf "
                    android:textColor="#5A5A5A"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"/>


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/chatbubbleknotgraycolor" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.17"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.78"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sender_background"
                android:orientation="vertical"
              >

                <com.widevision.quemvaita.model.CustomTextView
                    android:id="@+id/time_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="14:20"
                    android:textColor="#FCFCFC"
                    android:textSize="10sp" />

                <com.widevision.quemvaita.model.CustomTextView
                    android:id="@id/user_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="8dp"
                    android:text="t"
                    android:textColor="#FCFCFC"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/chatbubbleknotpinkcolor" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>