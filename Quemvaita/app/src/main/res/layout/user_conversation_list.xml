<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/friend_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/facebook_like_thumb_copy"/>
    <LinearLayout
        android:id="@+id/linear_friend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_box"
        android:visibility="visible">
    <com.widevision.quemvaita.model.CustomTextView
        android:id="@+id/friend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="friend text"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:padding="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/replay_box">
        <com.widevision.quemvaita.model.CustomTextView
            android:id="@id/user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="my text"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>